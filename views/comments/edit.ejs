<%- include ("../partials/header") %>


<div class="row">
    <div class="col-md-12 text-center mb-3">
        <h1>Edit Review</h1>
    </div>     
    <div class="col-md-6 m-auto">
        <form action="/campgrounds/<%= campground_slug %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea class="form-control" type="text" name="comment[text]" rows="6"><%= comment.text %></textarea>
            </div>
            <button class="btn btn-success mb-2">Update Review</button>
            <a class="btn btn-secondary mb-2" href="/campgrounds/<%= campground_slug %>">Cancel</a>
        </form>        
    </div>
</div>


<%- include ("../partials/footer") %>