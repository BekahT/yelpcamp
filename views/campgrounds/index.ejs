<%- include ("../partials/header") %>

<header class="jumbotron">
    <div class="container">
        <h1><i class="fas fa-hiking"></i> Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world!</p>
        <a class="btn btn-success btn-lg" href="/campgrounds/new"><i class="fas fa-plus"></i> Add New Campground</a>
        <form action="/campgrounds" method="GET" class="form-inline mt-4">
            <div class="form-group">
                <input class="form-control" type="text" name="search" placeholder="Campground Name">
                <button class="btn btn-light ml-2" type="submit" value="Search" title="Search campgrounds by full or partial name"><i class="fas fa-search-location"></i> Search</button>
                <a class="btn btn-light ml-2" href="/campgrounds" title="Clear the search and show all campgrounds"><i class="fas fa-undo"></i> Reset</a>
            </div>
        </form>        
    </div>
</header>

<div class="row text-center">
    <% if(noMatch !== null) { %>
        <div class="col-md-12 alert alert-danger" role="alert">        
            <%= noMatch %>        
        </div>
    <% } %>
    <% campgrounds.forEach(function(campground){ %>
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card">
            <div class="embed-responsive embed-responsive-16by9">
                <img class="card-img-top embed-responsive-item" src="<%= campground.image %>" alt="<%= campground.name %>">
            </div>            
            <div class="card-body">
              <h5 class="card-title"><%= campground.name %></h5>
              <a href="/campgrounds/<%= campground.slug %>" class="btn btn-dark">More Info</a>
            </div>
        </div>        
    </div>
    <% }); %>
</div>

<%- include ("../partials/footer") %>