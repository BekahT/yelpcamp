<%- include ("../partials/header") %>

<div class="row">
    <div class="col-md-12 text-center mb-3">
        <h1>Edit <%= campground.name %> </h1>
    </div>    
    <div class="col-md-6 m-auto">
        <form action="/campgrounds/<%= campground.slug %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="campground[name]" id="name" value="<%= campground.name %>" required>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="number" name="campground[price]" id="price" value="<%= campground.price %>" min="0.01" step="0.01" required>
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" id="image" value="<%= campground.image %>" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" rows="6" required><%= campground.description %></textarea>
            </div>
            <button class="btn btn-success mb-2" type="submit">Submit Update</button>
            <a class="btn btn-secondary mb-2" href="/campgrounds/<%= campground.slug %>">Cancel</a>
        </form>
     </div>
</div>

<%- include ("../partials/footer") %>