<%- include ("../partials/header") %>


<div class="row">
   <h1 style="text-align:center;">Create a New Campground</h1>
    <div style="width:30%; margin:30px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" id="name" placeholder="Campground name" required>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="number" name="price" id="price" placeholder="Price per night" min="0.01" step="0.01" required>
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="image" id="image" placeholder="Image URL" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="description" id="description" placeholder="Campground Description" required>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Submit Campground</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>  
     </div>
</div>



<%- include ("../partials/footer") %>